                                                                                <button class="trash" name="btnSil" value="@item.urunID.urunID"><i class="fa fa-trash"></i></button>
                                                                            }

                                                                            <a href="#"></a>
                                                                        </li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </li>
                                                }

                                                <li>
                                                    <table class="table table-bordered sub-total-area">
