                                            <div class="apply-btn-area">
                                                <a class="apply-now-btn" href="#" id="login-button">Login</a>
                                                <div class="login-form" id="login-form" style="display: none;">
                                                    <h2>Login</h2>

                                                    @using (Html.BeginForm())
