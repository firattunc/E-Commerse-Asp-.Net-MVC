                                            </div>
                                        </li>
                                        using (Html.BeginForm())
                                        {
                                            <li><button class="apply-now-btn" href="#" id="logout-button" type="submit" value="isLogin" name="btnLogout">Logout</button></li>
                                        }


                                    }

