        </div>
        <!-- END LEFT SIDEBAR -->
        <!-- MAIN -->
        <div class="main">
            <!-- MAIN CONTENT -->
            <div class="main-content">
                <div class="container-fluid">
                    <!-- OVERVIEW -->
                    <div class="panel panel-headline">
                        <div class="panel-heading">
                            <h3 class="panel-title">Weekly Overview</h3>
                            <p class="panel-subtitle">Period: Oct 14, 2016 - Oct 21, 2016</p>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="metric">
                                        <span class="icon"><i class="fa fa-eye"></i></span>
                                        <p>
                                            <span class="left">Günlük</span>
                                            <span class="number">@Model.ziyaretSayisiGünlük</span>
                                            <span class="title">Visits</span>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="metric">
                                        <span class="icon"><i class="fa fa-eye"></i></span>
                                        <p>
                                            <span class="left">Haftalık</span>
                                            <span class="number">@Model.ziyaretSayisiHaftalik</span>
                                            <span class="title">Visits</span>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="metric">
                                        <span class="icon"><i class="fa fa-eye"></i></span>
                                        <p>
                                            <span class="left">Toplam</span>
                                            <span class="number">@Model.ziyaretSayisiToplam</span>
                                            <span class="title">Visits</span>
                                        </p>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="metric">
                                        <span class="icon"><i style="margin-top:10px;" class="fas fa-shopping-cart"></i></span>
                                        <p>
                                            <span class="left">Günlük</span>
                                            <span class="number">@Model.urunSayisiGünlük</span>
                                            <span class="title">
                                                Items sold
                                            </span>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="metric">
                                        <span class="icon"><i style="margin-top:10px;" class="fas fa-shopping-cart"></i></span>
                                        <p>
                                            <span class="left">Haftalık</span>
                                            <span class="number">@Model.urunSayisiHaftalik</span>
                                            <span class="title">
                                                Items sold
                                            </span>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="metric">
                                        <span class="icon"><i style="margin-top:10px;" class="fas fa-shopping-cart"></i></span>
                                        <p>
                                            <span class="left">Toplam</span>
                                            <span class="number">@Model.urunSayisiToplam</span>
                                            <span class="title">
                                                Items sold
                                            </span>
                                        </p>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="metric">
                                        <span class="icon"><i style="margin-top:5px;" class="fas fa-users"></i></span>
                                        <p>
                                            <span class="left">Günlük</span>
                                            <span class="number">@Model.uyeKayitSayisiGünlük</span>
                                            <span class="title">
                                                Number of members
                                            </span>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="metric">
                                        <span class="icon"><i style="margin-top:5px;" class="fas fa-users" class="fa fa-eye"></i></span>
                                        <p>
                                            <span class="left">Haftalık</span>
                                            <span class="number">@Model.uyeKayitSayisiHaftalik</span>
                                            <span class="title">Number of members</span>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="metric">
                                        <span class="icon"><i style="margin-top:5px;" class="fas fa-users" class="fa fa-eye"></i></span>
                                        <p>
                                            <span class="left">Toplam</span>
                                            <span class="number">@Model.uyeKayitSayisiToplam</span>
                                            <span class="title">Number of members</span>
                                        </p>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="metric">
                                        <span class="icon"><i style="margin-top:5px;" class="fa fa-star"></i></span>
                                        <p>
                                            <span class="left">En çok satış yapılan kategori</span>
                                            <span class="number">@Model.enCokSatisKategori</span>
                                        </p>
                                    </div>
                                </div>
                                @{ 
                                    int x = 0;
                                    int y = 0;
                                }
                                <div class="col-md-12">
                                    <div class="metric">
                                        <span class="icon"><i style="margin-top:5px;" class="fa fa-star"></i></span>
                                        <p>
                                            <span class="left">En çok satışı yapılan ürünler</span>
                                            @foreach (var item in Model.enCokSatisUrun)
                                            {
                                                if (x >= 5)
                                                {
                                                    x = 0;
                                                    break;
                                                }
                                                else
                                                {
                                                    <span class="number">@item.ToString()</span>
                                                    x++;
                                                }

                                            }

                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="metric">
                                        <span class="icon"><i style="margin-top:5px;" class="fa fa-star"></i></span>
                                        <p>
                                            <span class="left">Sepete en çok eklenen ürünler</span>
                                            @foreach (var item in Model.enCokSepetUrun)
                                            {
                                                if (y >= 5)
                                                {
                                                    break;
                                                }
                                                else
                                                {
                                                    <span class="number">@item.ToString()</span>
                                                    y++;
                                                }

                                            }
                                        </p>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-9">
                                    <div id="headline-chart" class="ct-chart"></div>
                                </div>
                                <div class="col-md-3">
                                    <div class="weekly-summary text-right">
                                        <span class="number">2,315</span> <span class="percentage"><i class="fa fa-caret-up text-success"></i> 12%</span>
                                        <span class="info-label">Total Sales</span>
                                    </div>
                                    <div class="weekly-summary text-right">
                                        <span class="number">$5,758</span> <span class="percentage"><i class="fa fa-caret-up text-success"></i> 23%</span>
                                        <span class="info-label">Monthly Income</span>
                                    </div>
                                    <div class="weekly-summary text-right">
                                        <span class="number">$65,938</span> <span class="percentage"><i class="fa fa-caret-down text-danger"></i> 8%</span>
                                        <span class="info-label">Total Income</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END OVERVIEW -->
                    


                </div>
            </div>
            <!-- END MAIN CONTENT -->
        </div>
        <!-- END MAIN -->
        <div class="clearfix"></div>
        <footer>
            <div class="container-fluid">
                <p class="copyright">&copy; 2017 <a href="https://www.themeineed.com" target="_blank">Theme I Need</a>. All Rights Reserved.</p>
            </div>
        </footer>
    </div>
    <!-- END WRAPPER -->
    <!-- Javascript -->
    <script src="~/Content/AdminContent/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/AdminContent/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/AdminContent/vendor/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Content/AdminContent/vendor/jquery.easy-pie-chart/easypiechart.min.js"></script>
    <script src="~/Content/AdminContent/vendor/chartist/js/chartist.min.js"></script>
    <script src="~/Content/AdminContent/scripts/klorofil-common.js"></script>
    <script>
        $(function () {
            var data, options;

            // headline charts
            data = {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                series: [
                    [23, 29, 24, 40, 25, 24, 35],
                    [14, 25, 18, 34, 29, 38, 44],
                ]
            };

            options = {
                height: 300,
                showArea: true,
                showLine: false,
                showPoint: false,
                fullWidth: true,
                axisX: {
                    showGrid: false
                },
                lineSmooth: false,
            };

            new Chartist.Line('#headline-chart', data, options);


            // visits trend charts
            data = {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                series: [{
                    name: 'series-real',
                    data: [200, 380, 350, 320, 410, 450, 570, 400, 555, 620, 750, 900],
                }, {
                    name: 'series-projection',
                    data: [240, 350, 360, 380, 400, 450, 480, 523, 555, 600, 700, 800],
                }]
            };

            options = {
                fullWidth: true,
                lineSmooth: false,
                height: "270px",
                low: 0,
                high: 'auto',
                series: {
                    'series-projection': {
                        showArea: true,
                        showPoint: false,
                        showLine: false
                    },
                },
                axisX: {
                    showGrid: false,

                },
                axisY: {
                    showGrid: false,
                    onlyInteger: true,
                    offset: 0,
                },
                chartPadding: {
                    left: 20,
                    right: 20
                }
            };

            new Chartist.Line('#visits-trends-chart', data, options);


            // visits chart
            data = {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                series: [
                    [6384, 6342, 5437, 2764, 3958, 5068, 7654]
                ]
            };

            options = {
                height: 300,
                axisX: {
                    showGrid: false
                },
            };

            new Chartist.Bar('#visits-chart', data, options);


            // real-time pie chart
            var sysLoad = $('#system-load').easyPieChart({
                size: 130,
                barColor: function (percent) {
                    return "rgb(" + Math.round(200 * percent / 100) + ", " + Math.round(200 * (1.1 - percent / 100)) + ", 0)";
                },
                trackColor: 'rgba(245, 245, 245, 0.8)',
                scaleColor: false,
                lineWidth: 5,
                lineCap: "square",
                animate: 800
            });

            var updateInterval = 3000; // in milliseconds

            setInterval(function () {
                var randomVal;
                randomVal = getRandomInt(0, 100);

                sysLoad.data('easyPieChart').update(randomVal);
                sysLoad.find('.percent').text(randomVal);
            }, updateInterval);

            function getRandomInt(min, max) {
                return Math.floor(Math.random() * (max - min + 1)) + min;
                
            }

        });
            $("#logout").click(function () {
                $("#myForm").submit();
            });
    </script>
</body>
</html>
