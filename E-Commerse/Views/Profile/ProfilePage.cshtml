                                                            <img src="@urun.urunID.imageUrl" alt="product" class="img-responsive">
                                                        </div>
                                                        <div class="more-product-item-details">
                                                            <h4>@Html.ActionLink(urun.urunID.urunAd, "ProductDetails", "Product", new { urunid = urun.urunID.urunID }, new { })</h4>
