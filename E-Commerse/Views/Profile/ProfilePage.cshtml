                                                decimal indirimyuzde = Convert.ToDecimal(urun.urunID.indirimYuzde);
                                                decimal indirimliFiyat = Decimal.Round(urun.urunID.urunFiyat - (urun.urunID.urunFiyat * (indirimyuzde / 100)), 2);
                                                int ID = urun.urunID.urunID;

                                               
